<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3" >

    <h3><%= listing.title %></h3>
</div>
    <div class="card col-6 offset-3 show-card" style="width: 30rem;">
        <img src="<%= listing.listingImage  %>" 
        class="card-img-top show-img" 
        alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <!-- <b><%= listing.title %></b> <br> -->
            <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
        </div>
    </div>

    <!-- <ul>
        <li><%= listing.title %> </li>
        <li><%= listing.description %> </li>
        <li><%= listing.listingImage %> </li>
        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %> </li>
        <li><%= listing.location %> </li>
        <li><%= listing.country %> </li>
    </ul> -->

    <br>
    <div class="btns mt-2">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5 ">Delete</button>
    </form>
    </div>

    <div class="col-8 offset-3">
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-lebel">Rating</label>
                <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
            </div>

            <div class="mb-3 mt-3">
                <label for="comment" class="form-lebel">Comments</label>
                <textarea id="comment" name="review[comment]" rows="5" cols="30" class="form-control"></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>

</div>