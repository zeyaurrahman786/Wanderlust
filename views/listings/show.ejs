<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-3" >

    <h3>Listing Details : </h3>
</div>
    <div class="card col-6 offset-3 show-card" style="width: 30rem;">
        <img src="<%= listing.listingImage  %>" 
        class="card-img-top show-img" 
        alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br>
            <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %> <br>
        </p>
        </div>
    </div>

